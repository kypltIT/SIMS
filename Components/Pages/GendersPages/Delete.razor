@page "/genders/delete"

@using Microsoft.EntityFrameworkCore
@using SIMS.Models
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager


<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Genders</h4>
    <hr />
    @if (genders is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@genders.Name</dd>
        </dl>
        <EditForm method="post" Model="genders" OnValidSubmit="DeleteGenders" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(genders is null)">Delete</button> |
            <a href="/genders">Back to List</a>
        </EditForm>
    }
</div>

@code {
    Genders? genders;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        genders = await context.Genders.FirstOrDefaultAsync(m => m.Id == Id);

        if (genders is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteGenders()
    {
        using var context = DbFactory.CreateDbContext();
        context.Genders.Remove(genders!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/genders");
    }
}
