@page "/semesters/details"

@using Microsoft.EntityFrameworkCore
@using SIMS.Models
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
    Department Details
</h2>
<hr class="mb-4" />

<div>
    
    @if (semesters is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@semesters.Name</dd>
            <dt class="col-sm-2">StartDate</dt>
            <dd class="col-sm-10">@semesters.StartDate</dd>
            <dt class="col-sm-2">EndDate</dt>
            <dd class="col-sm-10">@semesters.EndDate</dd>
            <dt class="col-sm-2">Code</dt>
            <dd class="col-sm-10">@semesters.Code</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@semesters.Name</dd>
        </dl>
        <div class="mt-3">
            <a class="items-center px-4 py-2 text-sm font-medium text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple" href="@($"/departments/edit?id={semesters.Id}")">Edit</a> |
            <a href="@($"/semesters")">Back to List</a>
            |
        </div>
    }
</div>

@code {
    Semesters? semesters;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        semesters = await context.Semesters.FirstOrDefaultAsync(m => m.Id == Id);

        if (semesters is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
