@page "/users/students"

@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using SIMS.Models
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager


<PageTitle>Manage Students</PageTitle>

<h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200 text-center">
    Manage Students
</h2>

<QuickGrid Class="table"
           Items='@(DbFactory.CreateDbContext().ApplicationUser.Where(s => s.Role.Equals("Student")))'>

    <PropertyColumn Property="students => students.Code" />
    <PropertyColumn Property="students => students.FirstName" />
    <PropertyColumn Property="students => students.LastName" />
    <PropertyColumn Property="students => students.PhoneNumber" />
    <PropertyColumn Property="students => students.Email" />
    <PropertyColumn Property="students => students.IntialAdmissionCourse" />
    <PropertyColumn Property="students => students.Status" />
    <PropertyColumn Property="students => students.Role" />
    <TemplateColumn Context="users">

        <div class="flex space-x-2">
            <a href="@($"users/students/edit?id={users.Id}")">
                <svg class="w-5 h-5 text-purple-600" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                </svg>
            </a>
            <a href="@($"users/students/inactivate?id={users.Id}")">
                <svg class="w-5 h-5 text-purple-600" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
            </a>
        </div>


    </TemplateColumn>
</QuickGrid>
