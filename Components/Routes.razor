@using SIMS.Components.Account.Shared
<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.LoginLayout)"/>
    </Found>
    <NotFound>
        <CascadingAuthenticationState>
          <LayoutView Layout="@typeof(Layout.LoginLayout)">
          </LayoutView>
        </CascadingAuthenticationState>
   </NotFound>
</Router>
